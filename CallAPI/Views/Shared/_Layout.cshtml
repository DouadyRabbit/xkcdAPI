<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <span class="navbar-brand">
                @Html.ActionLink("xkcd API", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </span>

            <button class="navbar-toggler" type="button" data-toggle="collapse"  data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link active" })</li>

                    <li>
                        @if (Model.btnPrevDisabled)
                        {
                            @Html.ActionLink("Previous", "LoadImage", "Home", new { Id = Model.Num - 1 }, new { @class = "nav-link disabled" })
                        }
                        else
                        {
                            @Html.ActionLink("Previous", "LoadImage", "Home", new { Id = Model.Num - 1 }, new { @class = "nav-link active" })
                        }
                    </li>

                    <li>
                        @if (Model.btnNextDisabled)
                        {
                            @Html.ActionLink("Next", "LoadImage", "Home", new { Id = Model.Num + 1 }, new { @class = "nav-link disabled" })
                        }
                        else
                        {
                            @Html.ActionLink("Next", "LoadImage", "Home", new { Id = Model.Num + 1 }, new { @class = "nav-link active" })
                        }
                    </li>

                </ul>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - xkcd API</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
